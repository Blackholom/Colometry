<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.color.geometry.rubikon.colometry.MenuActivity"
    style="@style/AppTheme.CustomTheme"
    android:background="@drawable/fondm1"
    android:id="@+id/relativelayout1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Colometry"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_below="@+id/ayuda"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onePlayer"
        android:background="@drawable/user197"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twoPlayers"
        android:background="@drawable/msn"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/onePlayer" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ayuda"
        android:background="@drawable/question9"
        android:onClick="help"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/oneplayer"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:layout_above="@+id/twoPlayers"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/twoplayer"
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView4" />

</RelativeLayout>
